generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  canvasIcsUrl  String?
  apiTokenHash  String?   @unique // SHA-256 hash of extension API token
  createdAt     DateTime  @default(now())
  courses       Course[]
  tasks         Task[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id             String           @id @default(cuid())
  userId         String
  name           String
  shortName      String?
  instructor     String?
  term           String?
  color          String           @default("blue")
  schedule       String?
  location       String?
  canvasCourseId String?          // Canvas course ID for upsert sync
  currentGrade   String?          // Letter grade from Canvas (e.g. "A-")
  currentScore   Float?           // Numeric score from Canvas (e.g. 91.4)
  gradingScheme  Json?            // [{ name: "A", value: 0.94 }, ...] from Canvas grading standard
  applyGroupWeights Boolean       @default(false) // from Canvas apply_assignment_group_weights
  createdAt      DateTime         @default(now())
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignments    Assignment[]
  assignmentGroups AssignmentGroup[]
  topics         CourseTopic[]
  materials      CourseMaterial[]
  quizzes        Quiz[]
  announcements  Announcement[]
  tasks          Task[]
}

model CourseTopic {
  id              String   @id @default(cuid())
  courseId        String
  weekNumber      Int
  weekLabel       String
  startDate       String?
  topics          String[]
  readings        String[]
  notes           String?
  completedTopics String[] @default([])
  canvasModuleId  String?  // Canvas module ID for upsert sync
  createdAt       DateTime @default(now())
  course          Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model CourseMaterial {
  id            String   @id @default(cuid())
  courseId      String
  fileName      String
  detectedType  String
  summary       String
  relatedTopics String[]
  rawText       String
  storedForAI   Boolean  @default(false)
  uploadedAt    DateTime @default(now())
  course        Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Quiz {
  id        String         @id @default(cuid())
  courseId  String
  title     String
  createdAt DateTime       @default(now())
  course    Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  questions QuizQuestion[]
}

model QuizQuestion {
  id           String   @id @default(cuid())
  quizId       String
  question     String
  options      String[]
  correctIndex Int
  explanation  String?
  quiz         Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model AssignmentGroup {
  id              String       @id @default(cuid())
  courseId         String
  canvasGroupId   String       // Canvas assignment_group ID for upsert
  name            String       // e.g. "Exams", "Homework"
  weight          Float        // 0-100 (0 for all groups if unweighted/points-based)
  position        Int          // display order
  dropLowest      Int          @default(0)
  dropHighest     Int          @default(0)
  neverDrop       String[]     @default([]) // Canvas assignment IDs that must never be dropped
  course          Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assignments     Assignment[]

  @@unique([courseId, canvasGroupId])
}

model Assignment {
  id                 String            @id @default(cuid())
  courseId           String
  title              String
  type               String
  dueDate            String?           // Nullable for participation/attendance items
  description        String?
  status             String            @default("not_started")
  score              Float?            // Student's score from Canvas submission
  submittedAt        String?           // ISO datetime when student submitted
  googleEventId      String?
  canvasAssignmentId String?           // Canvas assignment ID for upsert sync
  canvasUrl          String?           // Direct link to Canvas assignment
  pointsPossible     Float?            // Points possible from Canvas
  assignmentGroupId  String?           // FK to AssignmentGroup
  gradingType        String?           // 'points' | 'pass_fail' | 'percent' | 'letter_grade' | 'gpa_scale' | 'not_graded'
  submissionTypes    String[]  @default([]) // Canvas submission_types array
  omitFromFinalGrade Boolean   @default(false) // true = doesn't count toward grade
  excused            Boolean   @default(false) // true = excluded from grade calculation
  missing            Boolean   @default(false) // true = past due, no submission
  late               Boolean   @default(false) // true = submitted after due date
  createdAt          DateTime          @default(now())
  course             Course            @relation(fields: [courseId], references: [id], onDelete: Cascade)
  assignmentGroup    AssignmentGroup?  @relation(fields: [assignmentGroupId], references: [id])
}

model Task {
  id            String    @id @default(cuid())
  userId        String
  courseId       String?
  assignmentId  String?       // source assignment for auto-generated tasks
  title         String
  description   String?
  dueDate       String?       // YYYY-MM-DD
  dueTime       String?       // HH:MM (24h) â€” optional time component
  priority      String        @default("medium") // "low" | "medium" | "high"
  completed     Boolean       @default(false)
  completedAt   DateTime?
  source        String        @default("manual") // "manual" | "auto"
  sourceType    String?       // "study" | "start" | "review" | "complete"
  googleEventId String?
  createdAt     DateTime      @default(now())
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  course        Course?       @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([userId, completed])
  @@index([userId, dueDate])
  @@unique([assignmentId, sourceType])
}

model Announcement {
  id        String   @id @default(cuid())
  courseId  String
  canvasId  String   // Canvas discussion_topic ID for upsert sync
  title     String
  body      String   // Plain text, stripped from HTML
  postedAt  String   // ISO datetime
  createdAt DateTime @default(now())
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}
