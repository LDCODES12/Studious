{
  "manifest_version": 3,
  "name": "Study Circle — Canvas Sync",
  "version": "1.0.0",
  "description": "One-click sync of your Canvas courses, assignments, and modules into Study Circle.",
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "alarms",
    "offscreen"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Study Circle — Canvas Sync",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.gradescope.com/courses/*/assignments*"],
      "js": ["gradescope-content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
